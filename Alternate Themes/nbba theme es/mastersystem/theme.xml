<theme>
<formatVersion>3</formatVersion>
<include>./../theme.xml</include>

<!-- Sega Master System - 3rd gen, June 20th 1986 -->
<!-- Normal: a42b29 -->
<!-- Light : d55555 -->
<!-- Dark  : 3c1010 -->

<view name="system, basic, detailed">
	
	<image name="logo">
		<path>./../../nbba theme/mastersystem/logo.svg</path>
	</image>
	
	<helpsystem name="help">
		<textColor>3c1010</textColor>
		<iconColor>3c1010</iconColor>
	</helpsystem>
	
</view>

<view name="system">
	
	<image name="background" extra="true">
		<path>./../../nbba theme/mastersystem/bg.jpg</path>
	</image>
	
	<image name="gc" extra="true">
		<path>./../../nbba theme/mastersystem/gc.png</path>
	</image>
	
	<text name="year" extra="true">
		<color>d55555</color>
		<text>3rd gen, June 20th 1986</text>
	</text>
	
</view>

<view name="basic, detailed">
	
	<image name="background">
		<color>a42b29</color>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<color>d55555</color>
	</text>
		<rating name="md_rating">
		<filledPath>./../../nbba theme/mastersystem/star_filled.svg</filledPath>
		<unfilledPath>./../../nbba theme/mastersystem/star_unfilled.svg</unfilledPath>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<color>d55555</color>
	</datetime>
	
	<textlist name="gamelist">
		<selectorColor>d5555500</selectorColor>
		<selectedColor>d55555</selectedColor>
		<primaryColor>d5555570</primaryColor>
		<secondaryColor>d5555570</secondaryColor>
	</textlist>
	
</view>

<view name="basic">
	
</view>

<view name="detailed">
	
</view>
	
</theme>