<theme>
<formatVersion>3</formatVersion>
<include>./../theme.xml</include>

<!-- Sega CD - 4th gen, October 15th 1992 -->
<!-- Normal: 09b4e0 -->
<!-- Light : a8edfc -->
<!-- Dark  : 045766 -->

<view name="system, basic, detailed">
	
	<image name="logo">
		<path>./../../nbba theme/segacd/logo.svg</path>
	</image>
	
	<helpsystem name="help">
		<textColor>045766</textColor>
		<iconColor>045766</iconColor>
	</helpsystem>
	
</view>

<view name="system">
	
	<image name="background" extra="true">
		<path>./../../nbba theme/segacd/bg.jpg</path>
	</image>

	<image name="gc" extra="true">
		<path>./../../nbba theme/segacd/gc.png</path>
	</image>
	
	<text name="year" extra="true">
		<color>a8edfc</color>
		<text>4th gen, October 15th 1992</text>
	</text>
	
</view>

<view name="basic, detailed">
	
	<image name="background">
		<color>09b4e0</color>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<color>a8edfc</color>
	</text>
		<rating name="md_rating">
		<filledPath>./../../nbba theme/segacd/star_filled.svg</filledPath>
		<unfilledPath>./../../nbba theme/segacd/star_unfilled.svg</unfilledPath>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<color>a8edfc</color>
	</datetime>
	
	<textlist name="gamelist">
		<selectorColor>a8edfc70</selectorColor>
		<selectedColor>045766</selectedColor>
		<primaryColor>a8edfc70</primaryColor>
		<secondaryColor>a8edfc70</secondaryColor>
	</textlist>
	
</view>

<view name="basic">
	
</view>

<view name="detailed">
	
</view>
	
</theme>