<theme>
<formatVersion>3</formatVersion>
<include>./../theme.xml</include>

<!-- Atari 7800 ProSystem - 3rd gen, June 1986 -->
<!-- Normal: 526188 -->
<!-- Light : a2acc4 -->
<!-- Dark  : 1f2431 -->

<view name="system, basic, detailed">
	
	<image name="logo">
		<path>./../../nbba theme/atari7800/logo.svg</path>
	</image>
	
	<helpsystem name="help">
		<textColor>1f2431</textColor>
		<iconColor>1f2431</iconColor>
	</helpsystem>
	
</view>

<view name="system">
	
	<image name="background" extra="true">
		<path>./../../nbba theme/atari7800/bg.jpg</path>
	</image>
	
	<image name="gc" extra="true">
		<path>./../../nbba theme/atari7800/gc.png</path>
	</image>
	
	<text name="year" extra="true">
		<color>a2acc4</color>
		<text>3rd gen, June 1986</text>
	</text>
	
</view>

<view name="basic, detailed">
	
	<image name="background">
		<color>526188</color>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<color>a2acc4</color>
	</text>
		<rating name="md_rating">
		<filledPath>./../../nbba theme/atari7800/star_filled.svg</filledPath>
		<unfilledPath>./../../nbba theme/atari7800/star_unfilled.svg</unfilledPath>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<color>a2acc4</color>
	</datetime>
	
	<textlist name="gamelist">
		<selectorColor>a2acc400</selectorColor>
		<selectedColor>a2acc4</selectedColor>
		<primaryColor>a2acc470</primaryColor>
		<secondaryColor>a2acc470</secondaryColor>
	</textlist>
	
</view>

<view name="basic">
	
</view>

<view name="detailed">
	
	<image name="npi" extra="true">
		<color>a2acc4cc</color>
	</image>
	
</view>
	
</theme>