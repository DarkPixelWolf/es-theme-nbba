<theme>
<formatVersion>3</formatVersion>
<include>./../theme.xml</include>

<!-- Commodore 64 - August 1982 -->
<!-- Normal: 009eda -->
<!-- Light : 81e3ff -->
<!-- Dark  : 005470 -->

<view name="system, basic, detailed">
	
	<image name="logo">
		<path>./../../nbba theme/c64/logo.svg</path>
	</image>
	
	<helpsystem name="help">
		<textColor>005470</textColor>
		<iconColor>005470</iconColor>
	</helpsystem>
	
</view>

<view name="system">
	
	<image name="background" extra="true">
		<path>./../../nbba theme/c64/bg.jpg</path>
	</image>
	
	<image name="gc" extra="true">
		<path>./../../nbba theme/c64/gc.png</path>
	</image>
	
	<text name="year" extra="true">
		<color>81e3ff</color>
		<text>August 1982</text>
	</text>
	
</view>

<view name="basic, detailed">
	
	<image name="background">
		<color>009eda</color>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<color>81e3ff</color>
	</text>
		<rating name="md_rating">
		<filledPath>./../../nbba theme/c64/star_filled.svg</filledPath>
		<unfilledPath>./../../nbba theme/c64/star_unfilled.svg</unfilledPath>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<color>81e3ff</color>
	</datetime>
	
	<textlist name="gamelist">
		<selectorColor>81e3ff00</selectorColor>
		<selectedColor>81e3ff</selectedColor>
		<primaryColor>81e3ff70</primaryColor>
		<secondaryColor>81e3ff70</secondaryColor>
	</textlist>
	
</view>

<view name="basic">
	
</view>

<view name="detailed">
	
	<image name="npi" extra="true">
		<color>81e3ffcc</color>
	</image>
	
</view>
	
</theme>