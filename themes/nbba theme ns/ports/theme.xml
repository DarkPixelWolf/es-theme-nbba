<theme>
<formatVersion>3</formatVersion>
<include>./../theme.xml</include>

<!-- Ports -->
<!-- Normal: 00aec5 -->
<!-- Light : 7bf1ff -->
<!-- Dark  : 006874 -->

<view name="system, basic, detailed">
	
	<image name="logo">
		<path>./../../nbba theme/ports/logo.svg</path>
	</image>
	
	<helpsystem name="help">
		<textColor>006874</textColor>
		<iconColor>006874</iconColor>
	</helpsystem>
	
</view>

<view name="system">
	
	<image name="background" extra="true">
		<path>./../../nbba theme/ports/bg.jpg</path>
	</image>
	
	<image name="gc" extra="true">
		<path>./../../nbba theme/ports/gc.png</path>
	</image>
	
	<text name="year" extra="true">
		<color>7bf1ff</color>
		<text></text>
	</text>
	
</view>

<view name="basic, detailed">
	
	<image name="background">
		<color>00aec5</color>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<color>7bf1ff</color>
	</text>
		<rating name="md_rating">
		<filledPath>./../../nbba theme/ports/star_filled.svg</filledPath>
		<unfilledPath>./../../nbba theme/ports/star_unfilled.svg</unfilledPath>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<color>7bf1ff</color>
	</datetime>
	
	<textlist name="gamelist">
		<selectorColor>7bf1ff70</selectorColor>
		<selectedColor>006874</selectedColor>
		<primaryColor>7bf1ff70</primaryColor>
		<secondaryColor>7bf1ff70</secondaryColor>
	</textlist>
	
</view>

<view name="basic">
	
</view>

<view name="detailed">
	
</view>
	
</theme>