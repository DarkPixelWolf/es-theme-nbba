<theme>
<formatVersion>3</formatVersion>

<view name="system, basic, detailed">

	<helpsystem name="help">
		<fontPath>./../nbba theme/main/font.ttf</fontPath>
		<fontSize>0.03</fontSize>
		<pos>0.01 0.96</pos>
	</helpsystem>

</view>

<view name="system">
	
	<image name="background" extra="true">
		<pos>0.5 0.5</pos>
		<origin>0.5 0.5</origin>
		<size>0 1</size>
	</image>
	
	<image name="gc" extra="true">
		<pos>0.5 0.19</pos>
		<origin>0.5 0.5</origin>
		<maxSize>0.75 0.35</maxSize>
	</image>
	
	<text name="year" extra="true">
		<fontPath>./../nbba theme/main/fontbold.ttf</fontPath>
		<fontSize>0.03</fontSize>
		<alignment>right</alignment>
		<size>0.995 0.05</size>
		<pos>0 0.895</pos>
	</text>
	
	<image name="footer" extra="true">
		<path>./../nbba theme/main/bg.jpg</path>
		<color>f3f3f3dd</color>
		<pos>0 1</pos>
		<origin>0 1</origin>
		<size>1 0.05</size>
	</image>
	
</view>

<view name="basic, detailed">
	
	<image name="header" extra="true">
		<pos>0 0</pos>
		<origin>0 0</origin>
		<size>1 0.1</size>
	</image>
	
	<image name="background">
		<path>./../nbba theme/main/bg.jpg</path>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<size>1 1</size>
	</image>
	
	<image name="filter" extra="true">
		<path>./../nbba theme/main/filter.png</path>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<size>1 1</size>
	</image>
	
	<image name="footer" extra="true">
		<path>./../nbba theme/main/bg.jpg</path>
		<color>f3f3f3</color>
		<pos>0 1</pos>
		<origin>0 1</origin>
		<size>1 0.05</size>
	</image>
	
	<image name="logo-h1" extra="true">
		<path>./../nbba theme/main/bg.jpg</path>
		<color>f3f3f3</color>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<size>1 0.1</size>
	</image>
	
	<image name="logo-h2" extra="true">
		<path>./../nbba theme/main/hl.svg</path>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<maxSize>1 0.1</maxSize>
	</image>
	
	<image name="logo-h3" extra="true">
		<path>./../nbba theme/main/hr.svg</path>
		<pos>1 0</pos>
		<origin>1 0</origin>
		<maxSize>1 0.1</maxSize>
	</image>
	
	<image name="logo">
		<pos>0.5 0.05</pos>
		<origin>0.5 0.5</origin>
		<maxSize>1 0.09</maxSize>
	</image>
	
	<textlist name="gamelist">
		<fontPath>./../nbba theme/main/font.ttf</fontPath>
		<fontSize>0.03</fontSize>
		<horizontalMargin>0.01</horizontalMargin>
		<scrollSound>./../nbba theme/main/sound.wav</scrollSound>
	</textlist>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<fontPath>./../nbba theme/main/font.ttf</fontPath>
		<fontSize>0.01</fontSize>
		<pos>-50 -50</pos>
	</text>
		<rating name="md_rating">
		<filledPath>./../nbba theme/main/star_filled.svg</filledPath>
		<unfilledPath>./../nbba theme/main/star_unfilled.svg</unfilledPath>
		<size>0.01 0.01</size>
		<pos>-50 -50</pos>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<fontPath>./../nbba theme/main/font.ttf</fontPath>
		<fontSize>0.01</fontSize>
		<pos>-50 -50</pos>
	</datetime>
	
</view>

<view name="basic">
	
	<textlist name="gamelist">
		<pos>0.005 0.105</pos>
		<size>0.99 0.84</size>
		<alignment>center</alignment>
	</textlist>
	
</view>

