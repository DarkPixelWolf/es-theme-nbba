<theme>
<formatVersion>3</formatVersion>
<include>./../theme.xml</include>

<!-- NEC TurboGrafx-16 - 4th gen, August 29th 1989 -->
<!-- Normal: f8951d -->
<!-- Light : fbbe75 -->
<!-- Dark  : aa5f06 -->

<view name="system, basic, detailed">
	
	<image name="logo">
		<path>./../../nbba theme/pcengine/logo.svg</path>
	</image>
	
	<helpsystem name="help">
		<textColor>aa5f06</textColor>
		<iconColor>aa5f06</iconColor>
	</helpsystem>
	
</view>

<view name="system">
	
	<image name="background" extra="true">
		<path>./../../nbba theme/pcengine/bg.jpg</path>
	</image>
	
	<image name="gc" extra="true">
		<path>./../../nbba theme/pcengine/gc.png</path>
	</image>
	
	<text name="year" extra="true">
		<color>fbbe75</color>
		<text>4th gen, August 29th 1989</text>
	</text>
	
</view>

<view name="basic, detailed">
	
	<image name="background">
		<color>f8951d</color>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
		<color>fbbe75</color>
	</text>
		<rating name="md_rating">
		<filledPath>./../../nbba theme/pcengine/star_filled.svg</filledPath>
		<unfilledPath>./../../nbba theme/pcengine/star_unfilled.svg</unfilledPath>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
		<color>fbbe75</color>
	</datetime>
	
	<textlist name="gamelist">
		<selectorColor>fbbe7500</selectorColor>
		<selectedColor>fbbe75</selectedColor>
		<primaryColor>fbbe7570</primaryColor>
		<secondaryColor>fbbe7570</secondaryColor>
	</textlist>
	
</view>

<view name="basic">
	
</view>

<view name="detailed">
	
	<image name="npi" extra="true">
		<color>fbbe75cc</color>
	</image>
	
</view>
	
</theme>